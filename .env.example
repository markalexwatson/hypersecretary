# Telegram bot token (get from @BotFather)
TELEGRAM_TOKEN=your-telegram-bot-token

# Anthropic API key (from console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Google AI API key (from aistudio.google.com)
GOOGLE_API_KEY=your-google-ai-key

# Your Telegram user ID (get by messaging @userinfobot on Telegram)
# Comma-separated if multiple. Leave empty to allow anyone (not recommended).
ALLOWED_USERS=123456789

# Models (defaults are sensible, change if you want)
CLAUDE_MODEL=claude-sonnet-4-20250514
GEMINI_MODEL=gemini-2.5-flash

# Webhook secret — shared between Cloudflare Email Worker and this bot
# Generate something random: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=change-me-to-something-random

# Port for the webhook HTTP server (Fly.io expects 8080)
WEBHOOK_PORT=8080

# Social notification polling (optional — leave blank to skip)
# Mastodon: Preferences → Development → New Application → check read:notifications only
MASTODON_INSTANCE=https://mastodon.social
MASTODON_TOKEN=your-mastodon-access-token

# Bluesky: Settings → Privacy and Security → App Passwords → create one
BLUESKY_HANDLE=yourname.bsky.social
BLUESKY_PASSWORD=your-app-password
